<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/med_item_ACTV_med_name"
        style="@style/Text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="medicine name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/med_item_ACTV_pat_name"
        style="@style/TextSmall"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/med_item_ACTV_med_name"
        android:text="patient name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/med_item_ACB_approve"
        style="@style/ApproveButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/approve" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/med_item_ACB_decline"
        style="@style/DeclineButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_item_ACB_approve"
        android:layout_alignParentEnd="true"
        android:text="@string/decline" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_below="@id/med_item_ACB_decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp" />

</RelativeLayout>